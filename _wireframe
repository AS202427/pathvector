#compdef _wireframe wireframe

function _wireframe {
    _arguments -C \
        "-h[Show help information]" \
        "--help[Show help information]" \
        "--version[Show version and exit]" \
        "--no-configure[Don't configure BIRD]" \
        "--d[Don't modify BIRD config]" \
        "--dry-run[Don't modify BIRD config]" \
        "-c[Configuration file in YAML, TOML, or JSON format (default: /etc/wireframe.yml)]" \
        "--config[Configuration file in YAML, TOML, or JSON format (default: /etc/wireframe.yml)]" \
        "-o[Directory to write output files to (default: /etc/bird/)]" \
        "--output[Directory to write output files to (default: /etc/bird/)]" \
        "-s[BIRD control socket (default: /run/bird/bird.ctl)]" \
        "--socket[BIRD control socket (default: /run/bird/bird.ctl)]" \
        "-k[Configuration file for keepalived (default: /etc/keepalived/keepalived.conf)]" \
        "--keepalived-config[Configuration file for keepalived (default: /etc/keepalived/keepalived.conf)]" \
        "-u[File to store web UI]" \
        "--ui-file[File to store web UI]" \
        "-v[Show verbose log messages]" \
        "--verbose[Show verbose log messages]"
}
